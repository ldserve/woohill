{%- case section.settings.text_width -%}
  {%- when 'narrow' -%}
    {%- assign container_classes = 'container container--narrow' -%}

  {%- when 'regular' -%}
    {%- assign container_classes = 'container container--medium' -%}

  {%- when 'wide' -%}
    {%- assign container_classes = 'container' -%}
{%- endcase -%}


<style>
  .rich-section-{{section.id}}{
    font-size:{{section.settings.font_size}}px;
  }
</style>

<section class="section section--text-centered section__text--layout" data-section-id="{{ section.id }}" data-section-type="rich-text" style="margin-top:{{section.settings.margin_top}}px; margin-bottom: {{section.settings.margin_botton}}px;margin-left:{{section.settings.margin_lr}}px;margin-right:{{section.settings.margin_lr}}px;background-color: {{section.settings.background}};">
  <div class="{{ container_classes }} text--layout" style=" text-align: {{section.settings.text_layout}}; color: {{section.settings.text_color}}; ">
    {%- if section.settings.title != blank -%}
      <h2 class="heading h1" style="color: {{section.settings.title_color}};">{{ section.settings.title | escape }}</h2>
    {%- endif -%}

    <div class="rte rich-section-{{section.id}}">
      {{ section.settings.content }}

      {%- if section.settings.button_link != blank and section.settings.button_text != blank -%}
        <a href="{{ section.settings.button_link }}" class="button button--primary">{{ section.settings.button_text | escape }}</a>
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Rich text",
  "settings": [
    {
      "type": "select",
      "id": "text_width",
      "label": "Text width",
      "options": [
        {
          "value": "narrow",
          "label": "Narrow"
        },
        {
          "value": "regular",
          "label": "Regular"
        },
        {
          "value": "wide",
          "label": "Wide"
        }
      ],
      "default": "narrow"
    },{
      "type": "select",
      "id": "text_layout",
      "label": "文本对齐方式",
      "options": [
      {
        "value":"left",
        "label":"左对齐"
      },{
        "value":"center",
        "label":"居中对齐"
      },{
        "value":"right",
        "label":"右对齐"
      }],
      "default": "center"
    },
    
    {
      "type": "color",
      "id": "title_color",
      "label": "标题文本颜色",
      "default": "#1b1b1b"
    },{
      "type": "color",
      "id": "text_color",
      "label": "文本颜色",
      "default": "#1b1b1b"
    },
    {
      "type": "color",
      "id": "background",
      "label": "背景颜色",
      "default": "#edece6"
    },
    {
      "type":"range",
      "id":"margin_top",
      "min":0,
      "max":100,
      "step":1,
      "unit":"px",
      "label":"顶部边距",
      "default":20
    },
    {
      "type":"range",
      "id":"margin_botton",
      "min":0,
      "max":100,
      "step":1,
      "unit":"px",
      "label":"底部边距",
      "default":20
    },
    {
      "type":"range",
      "id":"font_size",
      "min":10,
      "max":100,
      "step":1,
      "unit":"px",
      "label":"正文字体大小",
      "default":16
    },
    {
      "type":"range",
      "id":"margin_lr",
      "min":0,
      "max":100,
      "step":1,
      "unit":"px",
      "label":"左右边距",
      "default":0
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Your title"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Text",
      "default": "<p>Use this text to share information about your brand with your customers.<br>Describe a product, share announcements, or welcome customers to your store.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Our products"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link",
      "default": "/collections/all"
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "Rich text",
      "settings": {}
    }
  ]
}
{% endschema %}