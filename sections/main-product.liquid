          </div>
          </div>`;
        document.querySelector("body").insertAdjacentHTML('beforeEnd', sizeGuideHtml);
        document.querySelector(".sizeGuideBtn").addEventListener("click", function () {
            document.querySelector(".size-guide-fixed").style.display = "block";
            document.body.classList.add('overflow-hidden');
        });
        const sizes = document.querySelectorAll(".size-select-wrap .size-select")
        sizes.forEach((item) => {
            item.onclick = () => {
                var select = item.getAttribute("data-select");
                sizes.forEach((i) => {
                    i.classList.remove('selected')
                })
                document.querySelectorAll(".size-detail").forEach((el) => {
                    el.classList.remove("selected");
                })
                document.querySelector('[data-select=' + select + ']').classList.add("selected");
                document.querySelector('[data-content=' + select + ']').classList.add("selected");
            };
        })
        document.querySelector(".size-guide-fixed").onclick = function () {
            document.querySelector(".size-guide-fixed").style.display = "none";
            document.body.classList.remove('overflow-hidden');
        };
        document.querySelector(".size-close").onclick = function () {
            document.querySelector(".size-guide-fixed").style.display = "none";
