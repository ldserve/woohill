<section class="page-width section-{{ section.id }}-padding quick-view">
  <div
    class="product product--{{ section.settings.media_size }} product--{{ section.settings.gallery_layout }} grid grid--1-col {% if product.media.size > 0 %}grid--2-col-tablet{% else %}product--no-media{% endif %}">
    <div>
      <div>
        <img
        src="{{ product.featured_image | img_url: '100x100' }}"
        class="ny-product-img"
        alt="{{ product.featured_image.alt | default: shop.name | escape }}"
        loading="lazy"
      >
      </div>
    </div>
    <div class="product__info-wrapper grid__item">
      <div id="ProductInfo-{{ section.id }}"
