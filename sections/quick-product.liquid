          {%- when '@app' -%}
          {% render block %}
          {%- when 'text' -%}
            <p
              class="product__text{% if block.settings.text_style == 'uppercase' %} caption-with-letter-spacing{% elsif block.settings.text_style == 'subtitle' %} subtitle{% endif %}"
              {{ block.shopify_attributes }}>
              {{- block.settings.text -}}
            </p>
          {%- when 'title' -%}
            <h2 class="product__title" {{ block.shopify_attributes }}>
              {{ product.title | escape }}
            </h2>
          {%- when 'price' -%}
            <div class="no-js-hidden price_left d-flex jcsb" id="price-{{ section.id }}" role="status" {{ block.shopify_attributes }}>
              <span>{%- render 'price', product: product, use_variant: true, show_badges: true, price_class: 'price--large' -%}</span>
