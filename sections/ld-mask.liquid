"settings": [
{
  "type": "text",
  "id": "text",
  "default": "Text",
  "label": "标题"
  }
]
}
],
"presets": [
{
"name": "带遮罩层的banner",
"blocks": [
{
"type": "banner"
}
]
}
]
}
