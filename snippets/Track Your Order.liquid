<div style="width: 100%; margin: 0 auto; text-align: center; max-width: 650px; direction: initial;">
    <div class="TM_input-group">
        <p>Please enter the tracking number below.</p>
        <p style="margin-top: 1rem; font-size: 0.9rem; color: #000;">The tracking status might take a few days to be
            updated. Please wait patiently.<br /><br />(You will receive a tracking number after the good are shipped,
            so please wait until you received the tracking number)</p>
    </div>
</div>
<div style="width: 100%; margin: 0 auto; text-align: center; max-width: 1100px; direction: initial; display: table;">
    <!--单号输入框。--> <input id="YQNum"
        style="border: 1px solid  #000000; box-sizing: border-box; width: 72%; margin-bottom: 0; height: 3rem; padding: 10px 16px; border-radius: 0.4rem; border-top-right-radius: 0; border-bottom-right-radius: 0;"
        autocomplete="off" maxlength="100" name="button_tracking_number" type="text" value=""
        placeholder="Tracking Number/Email Adress" />
    <!--用于调用脚本方法的按钮。--> <button onclick="doTrack()"
        style="border: 0; box-sizing: border-box; margin-bottom: 0; height: 3rem; font-size: 1.1rem; margin-top: 0.9rem; width: 6rem; color: #fff; font-weight: bold; background: #000 url('https://s.trackingmore.com/images/icons/ico_index.png') no-repeat scroll -12px -560px; padding: 0 0 0 1.2rem; border-radius: 0.4rem; border-top-left-radius: 0; border-bottom-left-radius: 0; line-height: 1;">Track</button>
</div>
<!--用于显示查询结果的容器。-->
<div id="YQContainer"></div>
<!--脚本代码可放于页面底部，等到页面最后执行。-->
<script type="text/javascript" src="//www.17track.net/externalcall.js"></script>
<script type="text/javascript">// <![CDATA[
    function doTrack() {
        var num = document.getElementById("YQNum").value;
        if (num === "") {
            alert("Enter your number.");
            return;
        }
        YQV5.trackSingle({
            //必须，指定承载内容的容器ID。
            YQ_ContainerId: "YQContainer",
            //可选，指定查询结果高度，最大为800px，默认为560px。
            YQ_Height: 560,
            //可选，指定运输商，默认为自动识别。
            YQ_Fc: "0",
            //可选，指定UI语言，默认根据浏览器自动识别。
            YQ_Lang: "en",
            //必须，指定要查询的单号。
            YQ_Num: num
        });
    }
    // ]]></script>